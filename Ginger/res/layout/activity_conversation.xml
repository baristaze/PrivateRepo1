<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <ScrollView
        android:id="@+id/messageThreadScroll"
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@drawable/tile_background">	    
	   	
	   	<LinearLayout 
	   	    android:id="@+id/messageThread"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:orientation="vertical"
	       	android:paddingBottom="@dimen/general_margin_big">    	   
	   	</LinearLayout>
	   	     
    </ScrollView>
    
    <LinearLayout
        android:id="@+id/senderGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	   	
        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/conversation_message_edit_text_height"
            android:layout_margin="@dimen/general_margin"
            android:hint="@string/conversation_type_message_hint"
            android:singleLine="false">
            <requestFocus></requestFocus>
        </EditText>
        
        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/conversation_send_button_height"
            android:layout_marginTop="@dimen/general_margin"
	        android:layout_marginRight="@dimen/general_margin"
	        android:layout_marginBottom="@dimen/general_margin"
            android:text="@string/conversation_send_button_text">            
        </Button>
        	   
   	</LinearLayout>

</LinearLayout>
